# -*- coding: utf-8 -*-
"""
PlanBairros ‚Äî Front‚Äëend Streamlit (refatorado, com sele√ß√£o espacial)

Novidades:
‚Ä¢ Header ajustado (barra azul mais alta, tipografia Roboto)
‚Ä¢ Upload de CSV para pontos (lat, lon, valor, nome)
‚Ä¢ Upload de GeoJSON (EPSG:4326) com quadras/pol√≠gonos
‚Ä¢ Mapa interativo Folium com ferramenta de desenho (ret√¢ngulo/pol√≠gono)
  ‚Üí seleciona quadras que intersectam a geometria desenhada e resume estat√≠sticas
‚Ä¢ Fallback para mapa Plotly quando n√£o houver GeoJSON

Como usar:
1) Salve como app.py
2) Rode: streamlit run app.py (ou via deploy do GitHub no Streamlit Cloud)
3) Envie um GeoJSON (WGS84/EPSG:4326) para habilitar a sele√ß√£o de quadras
"""
from __future__ import annotations

from pathlib import Path
import random
from typing import Optional, Tuple

import pandas as pd
import plotly.express as px
import streamlit as st

# Novos imports para sele√ß√£o por √°rea
from streamlit_folium import st_folium
import folium
from folium.plugins import Draw
import geopandas as gpd
from shapely.geometry import shape

# ============================================================
# Configura√ß√£o global da p√°gina
# ============================================================
st.set_page_config(
    page_title="PlanBairros",
    page_icon="üèôÔ∏è",
    layout="wide",
    initial_sidebar_state="collapsed",
)

# ============================================================
# Paleta da marca
# ============================================================
PB_COLORS = {
    "amarelo": "#F4DD63",
    "verde": "#B1BF7C",
    "laranja": "#D58243",
    "telha": "#C65534",
    "teal": "#6FA097",
    "navy": "#14407D",
}

# ============================================================
# Helpers de estilo e assets
# ============================================================

def inject_css() -> None:
    """Injeta CSS de identidade visual e aplica **Roboto** como fonte global."""
    st.markdown(
        f"""
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');
            :root {{
                --pb-amarelo: {PB_COLORS['amarelo']};
                --pb-verde:   {PB_COLORS['verde']};
                --pb-laranja: {PB_COLORS['laranja']};
                --pb-telha:   {PB_COLORS['telha']};
                --pb-teal:    {PB_COLORS['teal']};
                --pb-navy:    {PB_COLORS['navy']};
            }}
            /* Fonte global */
            html, body, .stApp {{
                font-family: 'Roboto', system-ui, -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif !important;
            }}
            .pb-header {{
                background: var(--pb-navy);
                color: #fff;
                border-radius: 18px;
                padding: 20px 24px; /* barra mais alta */
                min-height: 110px;  /* altura m√≠nima da faixa */
                display: flex;
                align-items: center;
                gap: 16px;
            }}
            .pb-title {{
                font-size: 2.4rem;   /* t√≠tulo maior */
                line-height: 1.15;
                font-weight: 700;
                letter-spacing: .5px;
            }}
            .pb-subtitle {{
                opacity: .95;
                margin-top: 4px;
                font-size: 1.1rem;  /* subt√≠tulo um pouco maior */
                font-weight: 400;
            }}
            .stTabs [data-baseweb="tab-list"] button[role="tab"] {{
                background: transparent;
                border-bottom: 3px solid transparent;
                color: #2b2b2b;
                font-weight: 600;
            }}
            .stTabs [data-baseweb="tab-list"] button[aria-selected="true"] {{
                border-bottom: 3px solid var(--pb-teal) !important;
                color: var(--pb-navy) !important;
            }}
            .pb-card {{
                background: #ffffff;
                border: 1px solid rgba(20,64,125,.10);
                box-shadow: 0 1px 2px rgba(0,0,0,.04);
                border-radius: 16px;
                padding: 16px;
            }}
            .pb-card h4 {{
                margin: 0 0 8px 0;
                font-size: 1.05rem;
                color: var(--pb-navy);
            }}
            footer {{visibility: hidden;}}
            #MainMenu {{visibility: hidden;}}
        </style>
        """,
        unsafe_allow_html=True,
    )


def get_logo_path() -> Optional[str]:
    """Retorna o primeiro caminho de logo existente, se houver."""
    candidates = [
        "assets/logo_todos.jpg",
        "assets/logo_paleta.jpg",
        "logo_todos.jpg",
        "logo_paleta.jpg",
        "/mnt/data/logo_todos.jpg",
        "/mnt/data/logo_paleta.jpg",
    ]
    for p in candidates:
        if Path(p).exists():
            return p
    return None


# ============================================================
# Componentes de UI
# ============================================================

def build_header(logo_path: Optional[str]) -> None:
    """Renderiza o cabe√ßalho com logo e t√≠tulo."""
    with st.container():
        col1, col2 = st.columns([1, 7])
        with col1:
            if logo_path:
                st.image(logo_path, width=140)  # logo levemente menor para equilibrar
            else:
                st.write("")  # espa√ßamento
        with col2:
            st.markdown(
                """
                <div class="pb-header">
                    <div style="display:flex;flex-direction:column">
                        <div class="pb-title">PlanBairros</div>
                        <div class="pb-subtitle">Plataforma de visualiza√ß√£o e planejamento em n√≠vel de bairro</div>
                    </div>
                </div>
                """,
                unsafe_allow_html=True,
            )


def build_tabs() -> None:
    """Abas placeholder (conte√∫do ainda a definir)."""
    aba1, aba2, aba3, aba4 = st.tabs(["Aba 1", "Aba 2", "Aba 3", "Aba 4"])
    for i, aba in enumerate([aba1, aba2, aba3, aba4], start=1):
        with aba:
            st.markdown(
                f"**Conte√∫do da Aba {i}** ‚Äî este espa√ßo ser√° preenchido posteriormente com textos, imagens ou tabelas."
            )
    st.write("")


def build_controls() -> Tuple[str, str, str, str, Optional[pd.DataFrame], Optional[gpd.GeoDataFrame]]:
    """Painel de filtros/controles √† esquerda.

    Retorna as escolhas do usu√°rio, um DataFrame (CSV) e um GeoDataFrame (GeoJSON) opcionais.
    """
    st.markdown("<div class='pb-card'>", unsafe_allow_html=True)
    st.markdown("<h4>Configura√ß√µes</h4>", unsafe_allow_html=True)

    variavel = st.selectbox(
        "Vari√°veis",
        ["Popula√ß√£o", "Habita√ß√£o", "Mobilidade", "Uso do Solo", "Renda"],
        index=0,
        help="Selecione o tema principal que deseja analisar.",
        key="pb_variavel",
    )

    metrica = st.selectbox(
        "M√©tricas",
        ["Quantidade", "Percentual", "Densidade", "√çndice (z-score)"],
        index=0,
        help="Forma de c√°lculo/escala a ser aplicada nas visualiza√ß√µes.",
        key="pb_metrica",
    )

    detalhe = st.selectbox(
        "Detalhes",
        ["Bairro", "Distrito", "Subprefeitura", "√Årea de pondera√ß√£o"],
        index=0,
        help="N√≠vel de desagrega√ß√£o espacial.",
        key="pb_detalhe",
    )

    info = st.selectbox(
        "Informa√ß√µes",
        ["Notas metodol√≥gicas", "Gloss√°rio", "Fontes", "Contato"],
        index=0,
        help="Selecione o tipo de informa√ß√£o auxiliar.",
        key="pb_info",
    )

    st.divider()
    uploaded = st.file_uploader(
        "Opcional: envie um CSV com colunas lat, lon, valor, nome",
        type=["csv"],
        help="O arquivo ser√° usado para alimentar o mapa e o gr√°fico. Caso n√£o envie, dados de demonstra√ß√£o ser√£o utilizados.",
    )

    geojson_file = st.file_uploader(
        "Opcional: envie um GeoJSON (EPSG:4326) com quadras (pol√≠gonos)",
        type=["geojson", "json"],
        help="A camada ser√° usada para sele√ß√£o espacial no mapa.",
    )

    df_upload: Optional[pd.DataFrame] = None
    if uploaded is not None:
        try:
            df_upload = pd.read_csv(uploaded)
        except Exception as exc:  # noqa: BLE001
            st.warning(f"N√£o foi poss√≠vel ler o CSV: {exc}")

    gdf_quadras: Optional[gpd.GeoDataFrame] = None
    if geojson_file is not None:
        try:
            gdf_quadras = gpd.read_file(geojson_file)
            # Normaliza/garante WGS84 para visualiza√ß√£o web
            if gdf_quadras.crs is None:
                gdf_quadras.set_crs(epsg=4326, inplace=True)
            else:
                gdf_quadras = gdf_quadras.to_crs(epsg=4326)
        except Exception as exc:  # noqa: BLE001
            st.warning(f"N√£o foi poss√≠vel ler o GeoJSON: {exc}")

    st.markdown("</div>", unsafe_allow_html=True)

    return variavel, metrica, detalhe, info, df_upload, gdf_quadras


# ============================================================
# Dados (placeholders) e visualiza√ß√µes
# ============================================================

@st.cache_data(show_spinner=False)
def generate_demo_data(seed: int = 42) -> Tuple[pd.DataFrame, pd.DataFrame]:
    """Gera dados de demonstra√ß√£o para o gr√°fico e o mapa."""
    random.seed(seed)
    cat = ["A", "B", "C", "D", "E"]
    bar_df = pd.DataFrame(
        {"categoria": cat, "valor": [random.randint(10, 60) for _ in cat]}
    )

    map_df = pd.DataFrame(
        {
            "lat": [-23.5505, -23.62, -23.48, -23.57, -23.60],
            "lon": [-46.6333, -46.70, -46.55, -46.60, -46.64],
            "valor": [10, 25, 18, 32, 22],
            "nome": ["Ponto 1", "Ponto 2", "Ponto 3", "Ponto 4", "Ponto 5"],
        }
    )
    return bar_df, map_df


def plot_map(df: pd.DataFrame) -> None:
    """Renderiza um mapa de pontos com escala cont√≠nua de cores.

    Espera colunas: lat, lon, valor, nome
    """
    st.subheader("Mapa")
    mfig = px.scatter_mapbox(
        df,
        lat="lat",
        lon="lon",
        color="valor",
        size="valor",
        hover_name="nome",
        zoom=9,
        height=540,
        color_continuous_scale=[PB_COLORS["amarelo"], PB_COLORS["teal"], PB_COLORS["navy"]],
    )
    mfig.update_layout(
        mapbox_style="open-street-map",
        margin=dict(l=0, r=0, t=0, b=0),
        font=dict(family="Roboto, system-ui, -apple-system, Segoe UI, Helvetica, Arial, sans-serif"),
    )
    st.plotly_chart(mfig, use_container_width=True)


def plot_bar(df: pd.DataFrame) -> None:
    """Renderiza um gr√°fico de barras simples.

    Espera colunas: categoria, valor
    """
    st.subheader("Gr√°fico")
    bfig = px.bar(df, x="categoria", y="valor", text="valor", height=540)
    bfig.update_traces(marker_color=PB_COLORS["laranja"])  # cor da marca
    bfig.update_layout(
        margin=dict(l=0, r=0, t=0, b=0),
        font=dict(family="Roboto, system-ui, -apple-system, Segoe UI, Helvetica, Arial, sans-serif"),
    )
    st.plotly_chart(bfig, use_container_width=True)


def plot_blocks_selector_map(gdf_quadras: gpd.GeoDataFrame) -> None:
    """
    Exibe um mapa Folium com as quadras (pol√≠gonos) e ferramenta de desenho (Draw).
    O usu√°rio pode desenhar um pol√≠gono/ret√¢ngulo; fazemos a interse√ß√£o com as quadras
    e mostramos estat√≠sticas resumidas das colunas num√©ricas.
    """
    st.subheader("Mapa (sele√ß√£o por √°rea)")

    # Centro do mapa: tenta usar o centr√≥ide m√©dio das quadras (j√° em EPSG:4326)
    center_lat, center_lon = -23.55, -46.63
    try:
        centroid = gdf_quadras.geometry.unary_union.centroid
        if centroid.y and centroid.x:
            center_lat, center_lon = float(centroid.y), float(centroid.x)
    except Exception:
        pass

    m = folium.Map(location=[center_lat, center_lon], zoom_start=12, tiles="cartodbpositron")

    # Estilo das quadras + highlight no hover
    style_fn = lambda feat: {"color": PB_COLORS["navy"], "weight": 1, "fill": True, "fillOpacity": 0.15}
    highlight_fn = lambda feat: {"weight": 3, "color": PB_COLORS["teal"], "fillOpacity": 0.25}

    # Tooltip com algumas colunas (ajuste conforme seu schema)
    campos_tooltip = [c for c in gdf_quadras.columns if c != "geometry"][:4]
    tooltip = folium.features.GeoJsonTooltip(fields=campos_tooltip) if campos_tooltip else None

    folium.GeoJson(
        data=gdf_quadras.__geo_interface__,
        name="Quadras",
        style_function=style_fn,
        highlight_function=highlight_fn,
        tooltip=tooltip,
    ).add_to(m)

    # Ferramenta de desenho (ret√¢ngulo e pol√≠gono livre)
    Draw(
        export=False,
        position="topleft",
        draw_options={{
            "polyline": False,
            "polygon": True,
            "rectangle": True,
            "circle": False,
            "circlemarker": False,
            "marker": False,
        }},
        edit_options={{"edit": False, "remove": True}},
    ).add_to(m)

    st_map = st_folium(m, height=540, use_container_width=True, returned_objects=["last_active_drawing", "all_drawings"])

    # Se o usu√°rio desenhou algo, calculamos a sele√ß√£o
    geom_sel = None
    if st_map and st_map.get("last_active_drawing"):
        try:
            geom_sel = shape(st_map["last_active_drawing"]["geometry"])  # shapely geometry
        except Exception:
            geom_sel = None

    if geom_sel is None:
        st.info("Desenhe um ret√¢ngulo ou pol√≠gono no mapa para selecionar quadras e ver as estat√≠sticas.")
        return

    # Interse√ß√£o espacial (quadras que tocam a geometria desenhada)
    try:
        gdf = gdf_quadras
        if gdf.crs is None:
            gdf = gdf.set_crs(epsg=4326)
        sel_mask = gdf.intersects(geom_sel)
        sel = gdf.loc[sel_mask].copy()
    except Exception as exc:
        st.warning(f"N√£o foi poss√≠vel calcular a sele√ß√£o espacial: {exc}")
        return

    st.success(f"Quadras selecionadas: {len(sel)}")

    # Estat√≠sticas: sumariza colunas num√©ricas automaticamente
    num_cols = [c for c in sel.columns if c != "geometry" and pd.api.types.is_numeric_dtype(sel[c])]
    if not num_cols:
        st.write("N√£o h√° colunas num√©ricas para resumir. Mostrando apenas a contagem.")
        return

    resumo = sel[num_cols].agg(["sum", "mean", "median", "min", "max"]).T
    resumo.columns = ["Soma", "M√©dia", "Mediana", "M√≠n", "M√°x"]
    st.dataframe(resumo, use_container_width=True)


# ============================================================
# Layout principal
# ============================================================

def main() -> None:
    inject_css()
    logo_path = get_logo_path()

    # Header
    build_header(logo_path)
    st.write("")

    # Abas de topo
    build_tabs()

    # Grade abaixo das abas (com fallback para vers√µes antigas)
    try:
        left, center, right = st.columns([1, 2, 2], gap="large")
    except TypeError:  # vers√µes antigas sem suporte a gap
        left, center, right = st.columns([1, 2, 2])

    # Painel de filtros na esquerda
    with left:
        variavel, metrica, detalhe, info, df_upload, gdf_quadras = build_controls()

    # Dados base (upload ou demo) ‚Äî mantemos coer√™ncia entre mapa e barras
    bar_df_demo, map_df_demo = generate_demo_data()

    # Se houver CSV v√°lido, sincronizamos gr√°fico e mapa
    if df_upload is not None and set(["lat", "lon", "valor", "nome"]).issubset(df_upload.columns):
        map_df = df_upload.copy()
        # Para o gr√°fico, agregamos por nome como exemplo simples
        bar_df = (
            df_upload.rename(columns={"nome": "categoria"})[["categoria", "valor"]]
            .groupby("categoria", as_index=False)
            .sum()
        )
    else:
        map_df, bar_df = map_df_demo, bar_df_demo

    # √Årea central e direita: visualiza√ß√µes
    with center:
        # Se houver quadras, mostra o mapa com sele√ß√£o; sen√£o, o mapa original
        if gdf_quadras is not None and not gdf_quadras.empty:
            plot_blocks_selector_map(gdf_quadras)
        else:
            plot_map(map_df)

    with right:
        plot_bar(bar_df)

    # Rodap√© com badges de status
    st.write("")
    with st.container():
        col_a, col_b, col_c = st.columns([1, 1, 1])
        col_a.markdown(
            f"<div style='background:{PB_COLORS['verde']};border-radius:10px;padding:10px;text-align:center;color:#17323f'>Identidade visual pronta</div>",
            unsafe_allow_html=True,
        )
        col_b.markdown(
            f"<div style='background:{PB_COLORS['amarelo']};border-radius:10px;padding:10px;text-align:center;color:#17323f'>Layout responsivo</div>",
            unsafe_allow_html=True,
        )
        col_c.markdown(
            f"<div style='background:{PB_COLORS['teal']};border-radius:10px;padding:10px;text-align:center;color:white'>Pronto para acoplar dados</div>",
            unsafe_allow_html=True,
        )


if __name__ == "__main__":
    main()
